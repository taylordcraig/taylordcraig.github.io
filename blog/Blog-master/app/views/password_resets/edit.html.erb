<h1>Password Reset</h1>

<%= form_for @user, url: password_reset_path(@user) do |f| %>

<div>
  <%=f.label :password %>
  <%=f.password_field :password %>
</div>
<div>
  <%=f.label :password_confirmation %>
  <%=f.password_field :password_confirmation %>
</div>

<%= f.submit 'Update Password' %>

<% end %>
